{
  "manifest_version": 2,

  "name": "The will of the people",
  "description": "Time are at risk of being dark, let's not fool ourselves with rhetoric",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ]
}